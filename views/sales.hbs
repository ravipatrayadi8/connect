<!DOCTYPE html>
<html>
<head>
  <title>Cart Data</title>
  <style>
    table {
      border-collapse: collapse;
      width: 100%;
    }
    th, td {
      border: 1px solid black;
      padding: 8px;
      text-align: left;
    }
    th {
      background-color: #f2f2f2;
    }
  </style>
</head>
<body>
  <h1>Cart Data</h1>
  <table>
    <thead>
      <tr>
        <th>User Name</th>
        <th>Banana Count</th>
        <th>Mango Count</th>
        <th>Apple Count</th>
        <th>Kiwi Count</th>
        <th>Total Cost</th>
        <th>Pay Type</th>
      </tr>
    </thead>
    <tbody>
      {{#each carts}}
      <tr>
        <td>{{userName}}</td>
        <td>{{bananaCount}}</td>
        <td>{{mangoCount}}</td>
        <td>{{appleCount}}</td>
        <td>{{kiwiCount}}</td>
        <td>{{totalCost}}</td>
        <td>{{payType}}</td>
      </tr>
      {{/each}}
    </tbody>
        <tfoot>
      <tr>
        <td><strong>Total:</strong></td>
        <td>{{sumFruitQuantity 'bananaCount'}}</td>
        <td>{{sumFruitQuantity 'mangoCount'}}</td>
        <td>{{sumFruitQuantity 'appleCount'}}</td>
        <td>{{sumFruitQuantity 'kiwiCount'}}</td>
        <td>{{sumTotalCost}}</td>
        <td>Payed</td>
      </tr>
    </tfoot>
  </table>
</body>
</html>
